RewriteEngine On

# SEO-friendly product URLs
RewriteRule ^product/([A-Z0-9]{10})/?$ product.php?asin=$1 [L,QSA]
RewriteRule ^amazon-([^/]+)-([A-Z0-9]{10})/?$ product.php?asin=$2 [L,QSA]

# API routes
RewriteRule ^api/(.*)$ backend/api/$1 [L,QSA]

# Existing rules
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.html [L]